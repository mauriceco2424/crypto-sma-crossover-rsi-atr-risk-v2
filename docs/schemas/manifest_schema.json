{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Manifest Schema",
  "description": "Schema for manifest.json files in run directories",
  "type": "object",
  "properties": {
    "run_id": {"type": "string", "pattern": "^[a-zA-Z0-9_-]+$"},
    "created_at": {"type": "string", "format": "date-time"},
    "engine_version": {"type": "string"},
    "config_hash": {"type": "string", "pattern": "^[a-f0-9]{64}$"},
    "config_path": {"type": "string"},
    "universe": {"type": "string"},
    "date_start": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "date_end": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "seed": {"type": "integer", "minimum": 0},
    "cache_tag": {"type": ["string", "null"]},
    "offline": {"type": "boolean"},
    "max_workers": {"type": ["integer", "null"], "minimum": 1}
  },
  "required": ["run_id", "created_at", "engine_version", "config_hash", "config_path", "universe", "date_start", "date_end", "seed", "offline"]
}